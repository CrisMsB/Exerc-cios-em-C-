#include <iostream>
#include <math.h>
#define PI 3.14

using namespace std;

int main()
{
    float Raio=0, Ac=0, Cc=0; // Ac = Area do Circulo , Cc = Circunferencia do Circulo
    
    cout<<"Digite o raio do circulo: ";
    cin>>Raio;
    
    Ac = PI * pow (Raio,2);
    
    cout<<"A area do circulo é: "<<Ac<<endl;
    
    Cc = 2 * PI * Raio;
    
    cout<<"A circunferencia do circulo é: "<<Cc<<endl;
    
	return 0;
}
